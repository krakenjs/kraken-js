{

    "port": ["OPENSHIFT_NODEJS_PORT", "VCAP_APP_PORT", "PORT", 8000],

    "host": ["OPENSHIFT_NODEJS_IP", "VCAP_APP_HOST", "HOST", "IP"],

    "shutdownTimeout": 30000,

    "globalAgent": {
        "maxSockets": 250
    },

    "i18n": {
        "fallback": "en-US",
        "contentPath": "path:./locales"
    },

    "routes": {
        "routePath": "path:./controllers"
    },


    "view engines": {
        "js": {
            "module": "adaro",
            "settings": {
                "helpers": null,
                "stream": false
            }
        },

        "dust": {
            "module": "adaro",
            "settings": {
                "helpers": null,
                "stream": false
            }
        }
    },

    "express": {
        "env": "", // NOTE: `env` is managed by the framework. This value will be overwritten.
        "x-powered-by": false,
        "trust proxy": false,
        "jsonp callback name": null,
        "json replacer": null,
        "json spaces": 0,
        "case sensitive routing": false,
        "strict routing": false,
        "view cache": true,
        "view engine": "js",
        "views": "path:./.build/templates",
        "route": "/"
    }

}
